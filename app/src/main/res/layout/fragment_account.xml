<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment">

<!--    ScrollView먼저 띄울것!!!!-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:layout_constraintDimensionRatio="2.5:1"
            app:layout_constraintWidth_percent="0.8"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 금액 : "
                    android:id="@+id/nm"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/now_money"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/nm"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/now_money"
                    android:textSize="20sp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="원"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    app:layout_constraintLeft_toRightOf="@+id/now_money"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintDimensionRatio="1.3:1"
                    app:layout_constraintWidth_percent="0.15"
                    android:textAlignment="center"
                    android:id="@+id/month_spinner"
                    android:entries="@array/spinner_array"
                    android:background="@color/mainColor"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/month_spinner"
                    app:layout_constraintBottom_toBottomOf="@id/month_spinner"
                    app:layout_constraintLeft_toRightOf="@id/month_spinner"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    android:text="월 지출"
                    android:textColor="@color/mainColor"
                    android:textSize="25sp"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="+"
                    android:textColor="@color/mainColor"
                    android:backgroundTint="#ffffff"
                    android:textSize="30sp"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.15"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/add_btn"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>